---
import { formatDate, calculateReadTimes } from "../../utils/helpers.ts";
import { Image } from "astro:assets";

export interface Props {
  title: string;
  description: string;
  author: string;
  publish_date: Date;
  category: string;
  tags: string[];
  image?: string;
  slug: string;
  featured?: boolean;
  content?: string;
  loading?: 'eager' | 'lazy';
}

const { 
  title, 
  description, 
  author, 
  publish_date, 
  category, 
  tags, 
  image, 
  slug,
  featured = false,
  content = "",
  loading = 'lazy'
} = Astro.props;

const readTime = calculateReadTimes(content);
---

<article class={`group cursor-pointer`}>
  <a href={`/${slug}`} class="block">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-all duration-300 overflow-hidden border border-gray-200 dark:border-gray-700">
      
      <!-- Image -->
      {image && (
        <div class={`overflow-hidden h-48`}>
          <Image 
            src={image} 
            alt={title}
            width={400}
            height={200}
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            loading={loading}
            format="webp"
            quality={80}
            fetchpriority={loading === 'eager' ? 'high' : 'auto'}
          />
        </div>
      )}
      
      <!-- Content -->
      <div class="p-6">
        <!-- Category & Featured Badge -->
        <div class="flex items-center gap-2 mb-3">
          {tags.map(tag => 
            <span class="inline-block bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 px-2 py-1 rounded-full text-xs font-medium">
              {tag}
            </span>
          )}
        </div>
        
        <!-- Title -->
        <h3 class={`font-bold text-gray-900 dark:text-white group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors line-clamp-2 mb-3 text-xl`}>
          {title}
        </h3>
        
        <!-- Description -->
        <p class="text-gray-600 dark:text-gray-300 line-clamp-3 mb-4">
          {description}
        </p>
        
        <!-- Meta Info -->
        <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400">
          <div class="flex items-center space-x-2">
            <span class="font-medium">{author}</span>
            <span>•</span>
            <time datetime={publish_date.toISOString()}>
              {formatDate(publish_date)}
            </time>
            <span>•</span>
            <span>{readTime} min read</span>
          </div>
        </div>
      </div>
    </div>
  </a>
</article>