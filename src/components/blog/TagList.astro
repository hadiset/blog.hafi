---
export interface Props {
  tags: string[];
  currentTag?: string;
}

const { tags, currentTag } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  {tags.map(tag => (
    <a 
      href={`/tag/${tag}`}
      class={`inline-block px-3 py-2 rounded-full text-sm font-medium transition-all duration-200 hover:scale-105 ${
        currentTag === tag 
          ? 'bg-purple-600 text-white shadow-lg' 
          : 'bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-purple-100 dark:hover:bg-purple-900 hover:text-purple-800 dark:hover:text-purple-200'
      }`}
    >
      #{tag}
    </a>
  ))}
</div>