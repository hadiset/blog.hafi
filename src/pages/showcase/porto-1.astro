          <source srcset={heroDesktop.src} media="(min-width: 1024px)" />
          <source srcset={heroTablet.src} media="(min-width: 768px)" />
          <Image
            src={heroMobile}
            alt="Mobile Applications Screenshots"
            class="w-full mx-auto object-cover object-top md:object-center fade-in"
            loading="eager"
            fetchpriority="high"
          />
