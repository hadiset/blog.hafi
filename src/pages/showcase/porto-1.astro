import { Image } from "astro:assets";
import gambar from "../../assets/Prtfl1/thumb.webp";
import heroMobile from "../../assets/Prtfl1/heroMobile.webp";
import heroTablet from "../../assets/Prtfl1/heroTablet.webp";
import heroDesktop from "../../assets/Prtfl1/heroDesktop.webp";
import logo from "../../assets/Prtfl1/Logo.webp";
import logo1 from "../../assets/Prtfl1/Logo-1.webp";
import logo2 from "../../assets/Prtfl1/Logo-2.webp";
import logo3 from "../../assets/Prtfl1/Logo-3.webp";
import logo4 from "../../assets/Prtfl1/Logo-4.webp";
import logo5 from "../../assets/Prtfl1/Logo-5.webp";
