import cableIcon from "../../assets/Prtfl1/Cable icon.webp";
import chartIcon from "../../assets/Prtfl1/Chart icon.webp";
import closeIcon from "../../assets/Prtfl1/Close icon.webp";
import earthIcon from "../../assets/Prtfl1/Earth icon.webp";
import governmentIcon from "../../assets/Prtfl1/Government icon.webp";
import paintIcon from "../../assets/Prtfl1/Paint icon.webp";
import vectorIcon from "../../assets/Prtfl1/Vector icon.webp";
import imgMountain from "../../assets/Prtfl1/imgGal.webp";
import mountainMobile from "../../assets/Prtfl1/mountainMobile.webp";
import imgLandscape from "../../assets/Prtfl1/imgGal2.webp";
import imgSphere from "../../assets/Prtfl1/imgGal3.webp";
import imgRoll from "../../assets/Prtfl1/imgGal4.webp";
import appLogo from "../../assets/Prtfl1/AppLogo.webp";
---

<SlicingLayout
  pageTitle="Modern Product Launch"
  description="Build buzz around your launch with this bold product template. A clean, focused design that makes it easy to highlight features, share updates, and drive early interest."
  image={gambar}
  figmaUrl="https://www.figma.com/community/file/1487309170684591074/modern-product-launch"
  designer="Figma"
>
  <div class="flex flex-col mx-auto max-w-7xl pb-35 md:px-10 lg:pb-15 scroll-smooth">
    <!-- Navigation Bar -->
    <nav
      id="nav-bar"
      class="fixed flex flex-col items-start top-0 w-full h-19.5 bg-white rounded-b-lg drop-shadow-lg transition-all duration-300 ease-in-out z-50 md:relative md:items-center md:rounded-none md:drop-shadow-none md:z-40 md:h-37"
    >
      <div
        class="flex flex-row w-full items-center justify-between px-5 pt-5 pb-12.5 md:px-0 md:pb-20"
      >
        <p
          class="font-dm-sans font-medium text-[30px]/[1.2em] -tracking-[0.08em] text-porto1-accent4 md:-tracking-[0.05em]"
        >
          Area
        </p>
        <div class="md:hidden">
          <svg
            id="open-menu"
            class="w-6 h-6 text-black cursor-pointer"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            fill="none"
            viewBox="0 0 24 24"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-width="2"
              d="M5 7h14M5 12h14M5 17h14"></path>
          </svg>
          <svg
            id="close-menu"
            class="hidden w-6 h-6 text-black cursor-pointer"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            fill="none"
            viewBox="0 0 24 24"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18 17.94 6M18 18 6.06 6"></path>
          </svg>
        </div>
        <a
          href="https://www.figma.com/sites"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Learn more about Figma sites"
          class="hidden group bg-porto1-accent1 px-5.5 py-3.5 rounded-full text-porto1-link text-white md:inline-flex md:px-4.5 md:py-3.5 hover:bg-porto1-accent3"
          >Learn Figma
          <svg
            class="ms-0.5 w-4 h-4 rotate-45 group-hover:-translate-y-1 transition-all ease-in-out duration-150"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            fill="none"
            viewBox="0 0 24 24"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 6v13m0-13 4 4m-4-4-4 4"></path>
          </svg>
        </a>
      </div>
    </nav>

    <!-- Mobile Menu -->
    <div
      id="mobile-menu"
      class="fixed flex flex-col items-center top-26.5 bg-white w-full px-5 pt-2 pb-8 rounded-b-lg drop-shadow-lg gap-y-12.5 opacity-0 pointer-events-none -translate-y-24 transition-all duration-300 ease-in-out z-40 md:flex-row md:top-3 md:left-[50%] md:w-[399px] md:h-[60px] md:p-0 md:rounded-full md:drop-shadow-none md:opacity-100 md:translate-y-0 md:-translate-x-[50%] md:pointer-events-auto md:z-50 md:bg-white/30 md:backdrop-blur-lg"
    >
      <div
        class="flex flex-col w-full md:flex-row md:justify-between md:items-center md:m-0 md:px-6 md:py-5"
      >
        <a
          href="#benefits"
          class="w-full border-t border-t-porto1-divider py-7.5 text-porto1-link text-porto1-accent4 md:w-auto md:p-0 md:border-0 hover:opacity-55"
