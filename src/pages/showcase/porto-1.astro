            </div>
            <!-- Specifications table point -->
            <div
              class="flex flex-row justify-start items-center gap-x-2 px-7.5 py-8 border-b border-b-porto1-divider md:px-5"
            >
              <div class="w-3.5 h-3.5 shrink-0">
